<!-- res/drawable/border_spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the spinner -->
            <corners android:radius="8dp" /> <!-- Adjust the radius for rounded corners -->
            <stroke
                android:color="#CCCCCC"
            android:width="1dp" /> <!-- Border width -->
        </shape>
    </item>
</layer-list>
